<!-- views/rooms/votes.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Votes</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        
        <div class="d-flex justify-content-between align-items-center" id="roomHeader<%= room.id %>">
            <h2 class="mb-0" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #4a4a4a; text-transform: uppercase; font-weight: bold; letter-spacing: 1px; width: 80%;">VOTES</h2>
        </div>
        <hr class="my-4">        
        
        <h5 class="card-title" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #4a4a4a; font-weight: bold; letter-spacing: 1px;">Room <%= room.id %>: <%= room.name %></h5>
            
        <!-- Tabla participantes -->

        <table class="table mt-3">
            <thead class="thead-dark">
                <tr>
                    <th style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Role</th>
                    <th style="text-align: center; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">ID</th>
                    <th style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Username</th>
                    <th style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Email</th>
                    <th style="text-align: center; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Vote</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Coordinator</td>
                    <% if (room.coordinatorOfRoom) { %>
                        <td style="text-align: center"><%= room.coordinatorOfRoom.id %></td>
                        <td><%= room.coordinatorOfRoom.User.username %></td>
                        <td><%= room.coordinatorOfRoom.User.email %></td>
                        <td style="text-align: center"><%= likeOfCoordinator ? likeOfCoordinator.value : '-' %></td>
                    <% } %>
                </tr>
                <tr>
                    <td>Operator</td>
                    <% if (room.operatorOfRoom) { %>
                        <td style="text-align: center"><%= room.operatorOfRoom.id %></td>
                        <td><%= room.operatorOfRoom.User.username %></td>
                        <td><%= room.operatorOfRoom.User.email %></td>
                        <td style="text-align: center"><%= likeOfOperator ? likeOfOperator.value : '-' %></td>
                    <% } %>
                </tr>
                <tr>
                    <td>Technician</td>
                    <% if (room.technicianOfRoom) { %>
                        <td style="text-align: center"><%= room.technicianOfRoom.id %></td>
                        <td><%= room.technicianOfRoom.User.username %></td>
                        <td><%= room.technicianOfRoom.User.email %></td>
                        <td style="text-align: center"><%= likeOfTechnician ? likeOfTechnician.value : '-' %></td>
                    <% } %>
                </tr>

                <% interpreterLikes.forEach(item => { %>
                    <tr>
                        <td>Interpreter</td>
                        <td style="text-align: center"><%= item.interpreter.id %></td>
                        <td><%= item.interpreter.User.username %></td>
                        <td><%= item.interpreter.User.email %></td>
                        <td style="text-align: center"><%= item.like ? item.like.value : '-' %></td>
                    </tr>
                <% }) %>
                
            </tbody>
                
            </table>

        </div>
    </div>

    <br>
    <br>

    
    <div class="text-center">
        <a href="/rooms/<%= room.id %>/votes/edit" class="btn btn-primary">Change</a>
        <a href="/rooms/<%= room.id %>" class="btn btn-outline-dark">Back</a>
    </div>

    <script>
       document.addEventListener('DOMContentLoaded', () => {
            const numberToStars = (valor) => {
                switch (valor) {
                    case 1:
                        return "★☆☆☆☆";
                    case 2:
                        return "★★☆☆☆";
                    case 3:
                        return "★★★☆☆";
                    case 4:
                        return "★★★★☆";
                    case 5:
                        return "★★★★★";
                    default:
                        return '-';
                }
            }
        });
        
    </script>


</body>
</html>
