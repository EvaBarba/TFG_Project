<!-- views/users/profile.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-0" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #4a4a4a; text-transform: uppercase; font-weight: bold; letter-spacing: 1px;">User Profile</h2>
        <div class="row">
            <!-- Columna izquierda -->
            <div class="col-md-6">
                
                <br>
                <table class="table table-borderless mt-4">
                    <tr>
                        <th style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #4a4a4a; text-transform: uppercase; font-weight: bold; letter-spacing: 1px;">Username:</th>
                        <td><%= user.username %></td>
                    </tr>
                    <tr>
                        <th style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #4a4a4a; text-transform: uppercase; font-weight: bold; letter-spacing: 1px;">Role:</th>
                        <td><%= userRole %></td>
                    </tr>
                    <tr>
                        <th style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #4a4a4a; text-transform: uppercase; font-weight: bold; letter-spacing: 1px;">Email:</th>
                        <td><%= user.email %></td>
                    </tr>
                    <tr>
                        <th style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #4a4a4a; text-transform: uppercase; font-weight: bold; letter-spacing: 1px;">Password:</th>
                        <td>
                            <div class="row">
                                <div class="col-md-8"> <!-- Dos tercios del ancho -->
                                    <div class="input-group">
                                        <input type="password" class="form-control" id="password" name="password" value="<%= user.password %>" readonly>
                                        <div class="input-group-append">
                                            <button class="btn btn-outline-secondary toggle-password" type="button" id="passwordToggle">
                                                <i class="fa fa-eye" aria-hidden="true"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                        </td>
                    </tr>

                    </tr>
                    <% if (userRole === 'Interpreter') { %>
                        <tr>
                            <th style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #4a4a4a; text-transform: uppercase; font-weight: bold; letter-spacing: 1px;">Reputation:</th>
                            <td><%= user.interpreters.reputation.value %></td>
                        </tr>
                    <% } %>
                
                </table>
                
                <br>

            </div>



            <!-- Columna derecha -->
            <div class="col-md-6">
                <br>
                <br>
                
                    

            </div>
        </div>

        <br>

        <% if (userRole === 'Interpreter') { %>
            <h4 style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #4a4a4a; text-transform: uppercase; font-weight: bold; letter-spacing: 1px;">LANGUAGES</h4>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-sm">
                    
                    <thead class="thead-dark">
                        <tr>
                            <th style="text-align: center; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">ID</th>
                            <th style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Language from</th>
                            <th style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Language to</th>
                            <th style="text-align: center; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; width: 10%;">Manage</th>                                
                        </tr>
                    </thead>
                    
                    <tbody>
                        <% user.interpreters.languages.forEach(language => { %>
                            <tr>
                                <td style="text-align: center;"><%= language.id %></td>
                                <td><%= language.language_from %></td>
                                <td><%= language.language_to %></td>
                                <td style="text-align: center;">
                                    <button class="btn btn-danger btn-sm" onclick='deleteLanguage("<%= user.id %>", "<%= language.id %>")'>Delete</button>

                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                    
                </table>
    
                <div>
                    <a href="/users/<%= user.id %>/profile/newInterpreterLanguage" class="btn btn-success btn-sm">New Language</a>
                </div>
    
            </div>
        <% } %>

        <br>        
        <hr class="my-4">

        <!-- Tabla Likes -->
        <div>
            <h4 style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; color: #4a4a4a; text-transform: uppercase; font-weight: bold; letter-spacing: 1px;">Likes</h4>    
            <table class="table table-striped table-bordered table-sm">
                    
                <thead class="thead-dark">
                    <tr>
                        <th style="text-align: center; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; width: 10%;">Room ID</th>
                        <th style="text-align: center; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; width: 10%;">Value</th>
                        <th style="text-align: center; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">Details</th>                           
                    </tr>
                </thead>
                
                <tbody>
                    <% likes.forEach(like => { %>
                        <tr>
                            <td style="text-align: center;"><%= like.room_id %></td>
                            <td style="text-align: center;"><%= like.value %></td>
                            <td><%= like.details %></td>
                        </tr>
                    <% }); %>
                </tbody>
                
            </table> 
        </div>
        <br>
        <br>


        <!-- Botones -->
        <div class="mt-3" style="text-align: center;">
            <a href="/users/<%= user.id %>/editProfile" class="btn btn-primary">Edit Profile</a>
            <a href="/users/<%= user.id %>/delete" class="btn btn-danger">Delete User</a>
            <a href="javascript:history.go(-1)" class="btn btn-secondary">Back</a>
        </div>
    </div>

    <br>
    <br>
    <br>
    <br>


    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Botón mostrar password -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const passwordInput = document.getElementById('password');
            const passwordToggle = document.getElementById('passwordToggle');
        
            passwordToggle.addEventListener('click', function() {
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);
                passwordToggle.classList.toggle('active');
            });
        });
    </script>



</body>
</html>


<script>
    async function deleteLanguage(userId, languageId) {
        try {
            const response = await fetch(`/users/${userId}/languages/${languageId}/delete`, {
                method: 'POST'
            });
            if (response.ok) {
                location.reload(); // Refresca la página después de eliminar
            } else {
                console.error('Error deleting language');
            }
        } catch (error) {
            console.error('Error:', error);
        }
    }
</script>