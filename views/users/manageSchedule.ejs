                                        <% let formattedHour = (hour < 10) ? '0' + hour : hour; %>
                                        <% let selected = (TSMonday && TSMonday.start_time === formattedHour + ':00:00') ? ' selected' : ''; %>
                                        <option value="<%= formattedHour %>:00" <%= selected %>><%= formattedHour %>:00</option>
                                    <% } %>
                                </select>
                            </div>
